            </ul>
            <form class="form-inline my-2 my-lg-0">

                <div class="btn-group" style="margin-right: 20px">
                    <img class="display-picture" src="/images/profile.png">
                    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="cursor: pointer;">
                        {{user.displayName}}
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" style="font-family: 'Raleway'">
                        <a class="dropdown-item" href="#">Notifications</a>
                        <a class="dropdown-item" href="#">Account</a>
                        <a class="dropdown-item" href="/user/settings">Settings</a>
                        <div class="dropdown-divider"></div>
                        <a id="signout" class="dropdown-item" style="cursor: pointer;" >Sign Out</a>
                    </div>
                </div>
            </form>
        </div>
