    <script src="/javascripts/firebaseConfig.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="icon" type="image/png" href="/images/tab.png"/>

    <nav class="navbar fixed-top navbar-toggleable-md navbar-inverse bg-inverse navGrad" >
        <div class="collapse navbar-collapse" style="font-family: 'Gotham Thin'">
            <!-- As a heading -->
            <a class="nav-link" href="/">
            	<img src="/images/idea.png" width="50">
